{
  "name": "api-dbsder",
  "version": "0.0.1",
  "description": "API DBSDER",
  "author": "Cour de Cassation",
  "private": true,
  "license": "MIT",
  "scripts": {
    "start:watch": "nodemon --watch 'src/**' --ext 'ts,json' --exec 'npx ts-node src/server.ts'",
    "start": "node dist/server.js",
    "start:docker": "docker compose up -d",
    "stop:docker": "docker compose stop",
    "build:watch": "tsc --watch",
    "build": "tsc --build",
    "format": "prettier \"src/**/*.ts\" --check",
    "lint": "eslint \"src/**/*.ts\" --max-warnings 0",
    "fix": "eslint \"src/**/*.ts\" --fix && prettier \"src/**/*.ts\" --write",
    "test": "jest --detectOpenHandles -c=jest.config.js"
  },
  "dependencies": {
    "axios": "1.13.2",
    "dbsder-api-types": "2.1.40",
    "dotenv": "17.2.3",
    "express": "5.1.0",
    "helmet": "8.1.0",
    "mongodb": "7.0.0",
    "pino": "9.11.0",
    "zod": "4.1.13"
  },
  "devDependencies": {
    "@eslint/js": "9.39.1",
    "@types/express": "5.0.5",
    "@types/jest": "^30.0.0",
    "@types/node": "22.10.10",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "8.41.0",
    "@typescript-eslint/parser": "8.41.0",
    "eslint": "9.39.1",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.4",
    "globals": "16.5.0",
    "jest": "^30.2.0",
    "nodemon": "3.1.11",
    "pino-pretty": "13.1.2",
    "prettier": "3.7.1",
    "supertest": "^7.2.2",
    "ts-jest": "^29.4.5",
    "ts-node": "10.9.2",
    "typescript": "5.9.3",
    "typescript-eslint": "8.41.0"
  }
}
