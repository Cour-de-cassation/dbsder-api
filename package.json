{
  "name": "api-dbsder",
  "version": "0.0.1",
  "description": "API DBSDER",
  "author": "Cour de Cassation",
  "private": true,
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "docker:build": "docker-compose -f docker-compose.local.yml build",
    "docker:start": "docker-compose -f docker-compose.local.yml up -d",
    "docker:start:db": "docker-compose -f docker-compose.local.yml up -d db",
    "docker:stop:db": "docker-compose -f docker-compose.local.yml stop db",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "NODE_ENV=local nest start",
    "start:dev": "NODE_ENV=local nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest && npm run test:integration",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:unit": "jest",
    "test:integration": "jest --config ./jest-integration.json --runInBand"
  },
  "dependencies": {
    "@nestjs/common": "10.3.0",
    "@nestjs/config": "3.1.1",
    "@nestjs/core": "10.3.0",
    "@nestjs/mongoose": "10.0.2",
    "@nestjs/passport": "10.0.3",
    "@nestjs/platform-express": "10.3.0",
    "@nestjs/swagger": "7.2.0",
    "@nestjs/terminus": "10.2.0",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.1",
    "dbsder-api-types": "1.1.34",
    "express-basic-auth": "1.2.1",
    "joi": "17.12.0",
    "mongoose": "8.1.0",
    "nestjs-pino": "4.0.0",
    "passport": "0.7.0",
    "passport-headerapikey": "1.2.2",
    "pino-http": "9.0.0",
    "reflect-metadata": "0.1.13",
    "rimraf": "5.0.5",
    "rxjs": "7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "10.3.0",
    "@nestjs/schematics": "10.1.0",
    "@nestjs/testing": "10.3.0",
    "@types/express": "4.17.21",
    "@types/jest": "29.5.11",
    "@types/node": "20.11.5",
    "@types/supertest": "6.0.2",
    "@typescript-eslint/eslint-plugin": "6.19.0",
    "@typescript-eslint/parser": "6.19.0",
    "eslint": "8.56.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.1.3",
    "husky": "8.0.3",
    "jest": "29.7.0",
    "jest-mock-extended": "3.0.5",
    "mongodb-memory-server": "9.1.6",
    "pino-pretty": "10.3.1",
    "prettier": "3.2.4",
    "source-map-support": "0.5.21",
    "supertest": "6.3.4",
    "ts-jest": "29.1.2",
    "ts-loader": "9.5.1",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.3.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      ".+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "setupFiles": [
      "<rootDir>/.jest/setupEnvVars.ts"
    ]
  }
}
