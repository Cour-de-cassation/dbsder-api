{
  "name": "api-dbsder",
  "version": "0.0.1",
  "description": "API DBSDER",
  "author": "Cour de Cassation",
  "private": true,
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "docker:build": "docker compose -f docker-compose.local.yml build",
    "docker:start": "docker compose -f docker-compose.local.yml up -d",
    "docker:start:db": "docker compose -f docker-compose.local.yml up -d db",
    "docker:stop:db": "docker compose -f docker-compose.local.yml stop db",
    "docker:stop": "docker compose -f docker-compose.local.yml stop",
    "docker:kill": "docker compose -f docker-compose.local.yml down --remove-orphans --volumes --rmi all",
    "format": "prettier \"src/**/*.ts\" --check",
    "start": "NODE_ENV=local nest start",
    "start:dev": "NODE_ENV=local nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --quiet",
    "test": "jest && npm run test:integration",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:unit": "jest",
    "test:integration": "jest --config ./jest-integration.json --runInBand",
    "fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix && prettier \"src/**/*.ts\" --write"
  },
  "dependencies": {
    "@nestjs/common": "10.2.8",
    "@nestjs/config": "3.1.1",
    "@nestjs/core": "10.2.8",
    "@nestjs/mongoose": "10.0.1",
    "@nestjs/passport": "10.0.2",
    "@nestjs/platform-express": "10.2.8",
    "@nestjs/swagger": "7.1.14",
    "@nestjs/terminus": "10.1.1",
    "axios": "^1.6.7",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.0",
    "dbsder-api-types": "1.6.0",
    "express-basic-auth": "1.2.1",
    "joi": "17.11.0",
    "mongoose": "7.5.2",
    "nestjs-pino": "3.5.0",
    "passport": "0.6.0",
    "passport-headerapikey": "1.2.2",
    "pino-http": "8.5.1",
    "reflect-metadata": "0.1.13",
    "rimraf": "5.0.5",
    "rxjs": "7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "10.2.0",
    "@nestjs/schematics": "10.0.3",
    "@nestjs/testing": "10.2.8",
    "@types/express": "4.17.20",
    "@types/jest": "29.5.7",
    "@types/node": "20.8.10",
    "@types/supertest": "2.0.15",
    "@typescript-eslint/eslint-plugin": "6.9.1",
    "@typescript-eslint/parser": "6.9.1",
    "dotenv": "^16.4.5",
    "eslint": "8.53.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-prettier": "5.0.1",
    "jest": "29.7.0",
    "jest-mock-extended": "3.0.5",
    "mongodb-memory-server": "9.0.1",
    "pino-pretty": "10.2.3",
    "prettier": "3.0.3",
    "source-map-support": "0.5.21",
    "supertest": "6.3.3",
    "ts-jest": "29.1.1",
    "ts-loader": "9.5.0",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.2.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      ".+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "setupFiles": [
      "<rootDir>/.jest/setupEnvVars.ts"
    ]
  }
}
